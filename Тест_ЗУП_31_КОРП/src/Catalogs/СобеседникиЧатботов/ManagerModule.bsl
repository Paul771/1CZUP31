Функция ОписаниеСобеседника() Экспорт
	
	Описание = Новый Структура(
		"Код, 
		|Имя,
		|Фамилия,
		|КраткоеИмя");
	
	Описание.Код = 0;
	Описание.Имя = "";
	Описание.Фамилия = "";
	Описание.КраткоеИмя = "";
	
	Возврат Описание;
	
КонецФункции

Функция СоздатьСобеседника(Код, Описание = Неопределено) Экспорт
	
	СобеседникСсылка = Справочники.СобеседникиЧатботов.НайтиПоКоду(Код);
	Если Не СобеседникСсылка.Пустая() Тогда
		Возврат СобеседникСсылка;
	КонецЕсли;
	
	Если Описание = Неопределено Тогда
		Описание = ОписаниеСобеседника();
	КонецЕсли;
	
	СобеседникОбъект = Справочники.СобеседникиЧатботов.СоздатьЭлемент();
	ЗаполнитьЗначенияСвойств(СобеседникОбъект, Описание);
	СобеседникОбъект.Код = Код;
	СобеседникОбъект.Наименование = Описание.Имя;
	СобеседникОбъект.Записать();
	
	Возврат СобеседникСсылка;
	
КонецФункции

