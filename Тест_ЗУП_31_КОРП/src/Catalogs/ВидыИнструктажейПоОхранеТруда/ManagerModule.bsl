// Процедура выполняет первоначальное видов происшествий.
Процедура НачальноеЗаполнение() Экспорт
	
	Запрос = Новый Запрос;
	
	Запрос.Текст = 
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	ИСТИНА КАК ЗначениеИстина
	|ИЗ
	|	Справочник.ВидыИнструктажейПоОхранеТруда КАК ВидыИнструктажейПоОхранеТруда
	|ГДЕ
	|	ВидыИнструктажейПоОхранеТруда.Ссылка <> ЗНАЧЕНИЕ(Справочник.ВидыИнструктажейПоОхранеТруда.Вводный)";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Если Не РезультатЗапроса.Пустой() Тогда 
		Возврат;
	КонецЕсли;
	
	// Вводный
	ВидИнструктажаОбъект = Справочники.ВидыИнструктажейПоОхранеТруда.Вводный.ПолучитьОбъект();
	ВидИнструктажаОбъект.КонтролироватьПроведениеИнструктажа = Истина;
	ВидИнструктажаОбъект.ПроводитсяПовторно = Ложь;
	ВидИнструктажаОбъект.ИспользоватьДляВсехРабочихМест = Истина;
	ВидИнструктажаОбъект.Записать();
	
	// На рабочем месте (первичный и повторный)
	ВидИнструктажаОбъект = Справочники.ВидыИнструктажейПоОхранеТруда.СоздатьЭлемент();
	ВидИнструктажаОбъект.Наименование = НСтр("ru = 'На рабочем месте (первичный и повторный)'");
	ВидИнструктажаОбъект.КонтролироватьПроведениеИнструктажа = Истина;
	ВидИнструктажаОбъект.ПроводитсяПовторно = Истина;
	ВидИнструктажаОбъект.ИспользоватьДляВсехРабочихМест = Истина;
	ВидИнструктажаОбъект.КоличествоРаз = 1;
	ВидИнструктажаОбъект.КоличествоПериодов = 1;
	ВидИнструктажаОбъект.Периодичность = Перечисления.Периодичность.Месяц;
	ВидИнструктажаОбъект.Записать();
	
	// Внеплановый
	ВидИнструктажаОбъект = Справочники.ВидыИнструктажейПоОхранеТруда.СоздатьЭлемент();
	ВидИнструктажаОбъект.Наименование = НСтр("ru = 'Внеплановый'");
	ВидИнструктажаОбъект.ИспользоватьДляВсехРабочихМест = Истина;
	ВидИнструктажаОбъект.Записать();
	
	// Целевой
	ВидИнструктажаОбъект = Справочники.ВидыИнструктажейПоОхранеТруда.СоздатьЭлемент();
	ВидИнструктажаОбъект.Наименование = НСтр("ru = 'Целевой'");
	ВидИнструктажаОбъект.ИспользоватьДляВсехРабочихМест = Истина;
	ВидИнструктажаОбъект.Записать();
	
КонецПроцедуры

