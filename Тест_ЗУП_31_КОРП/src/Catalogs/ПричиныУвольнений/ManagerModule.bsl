// Начальное заполнение справочника причин увольнений при обновлении или первой установке.
//
Процедура НачальноеЗаполнение() Экспорт 
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ ПЕРВЫЕ 1
		|	ИСТИНА КАК Поле1
		|ИЗ
		|	Справочник.ПричиныУвольнений КАК ПричиныУвольнений";
	РезультатЗапроса = Запрос.Выполнить();
	Если Не РезультатЗапроса.Пустой() Тогда
		Возврат;
	КонецЕсли;
	
	ТекстовыйДокумент = Справочники.ПричиныУвольнений.ПолучитьМакет("ПричиныУвольнений");
	ПричиныУвольнений = ОбщегоНазначения.ПрочитатьXMLВТаблицу(ТекстовыйДокумент.ПолучитьТекст()).Данные;

	Для Каждого СтрокаТаблицы Из ПричиныУвольнений Цикл
		СправочникОбъект = Справочники.ПричиныУвольнений.СоздатьЭлемент();
		СправочникОбъект.Наименование = СтрокаТаблицы.Description;
		СправочникОбъект.Пояснение = СтрокаТаблицы.Note;
		ОбновлениеИнформационнойБазы.ЗаписатьОбъект(СправочникОбъект);
	КонецЦикла;
	
КонецПроцедуры

