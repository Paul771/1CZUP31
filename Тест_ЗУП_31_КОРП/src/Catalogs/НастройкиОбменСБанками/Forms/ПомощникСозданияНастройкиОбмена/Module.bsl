			ПодключитьОбработчикОжидания("СкачатьВКССервераБанка", 0.1, Истина);
		КонецЕсли;
	ИначеЕсли НастройкиОбменаСБанком.ПрограммаБанка = ПредопределенноеЗначение("Перечисление.ПрограммыБанка.АльфаБанкОнлайн") Тогда
