Процедура ЗагрузитьСертификатыСбербанка(Знач Данные, Знач Организация, Знач УникальныйИдентификатор, Успех, СертификатыКлиента, СертификатБанкаСсылка)
	
	Успех = Ложь;
	
	ЧтениеXML = Новый ЧтениеXML;
	ЧтениеXML.УстановитьСтроку(Данные);
	
	Попытка
		ЭД = ФабрикаXDTO.ПрочитатьXML(ЧтениеXML);
	Исключение
		ЧтениеXML.Закрыть();
		ТекстСообщения = НСтр("ru = 'Возникла ошибка при чтении полученных данных из банка'");
		ТекстОшибки = НСтр("ru = 'Возникла ошибка при чтении полученных данных из банка
							|Текст ошибки: %1'");
		ПодробноеПредставлениеОшибки = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		ТекстОшибки = СтрШаблон(ТекстОшибки, ПодробноеПредставлениеОшибки);
		ВидОперации = НСтр("ru = 'Чтение полученных данных из банка'");
		ЭлектронноеВзаимодействиеСлужебныйВызовСервера.ОбработатьОшибку(
			ВидОперации, ТекстОшибки, ТекстСообщения, "ОбменСБанками");
		Возврат;
	КонецПопытки;
	
	СертификатыКлиента = Новый Массив;
	
	Для Каждого ДанныеСертификата Из ЭД.Certificates.Certificate Цикл
		
		Bank = ЭлектронноеВзаимодействиеСлужебный.ЗначениеСвойстваXDTO(ДанныеСертификата, "Bank");
		active = ЭлектронноеВзаимодействиеСлужебный.ЗначениеСвойстваXDTO(ДанныеСертификата, "active");
		client = ЭлектронноеВзаимодействиеСлужебный.ЗначениеСвойстваXDTO(ДанныеСертификата, "client");
		
		Если Bank = "1" И active = "1" Тогда
