Функция ПериодПоискаОбщегоГрафикаДляОбновления(СтрокаТаблицы, ОписаниеТаблицы)
	ПериодПоиска = ЗарплатаКадрыПериодическиеРегистры.МаксимальнаяДата();
	Если ЗначениеЗаполнено(СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериод]) 
		И ЗначениеЗаполнено(СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериодДействия])
		И НачалоМесяца(СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериодДействия]) = НачалоМесяца(СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериод]) Тогда
		
		ПериодПоиска = СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериод];
	ИначеЕсли ЗначениеЗаполнено(СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериодДействия]) Тогда  
		ПериодПоиска = СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериодДействия];
	ИначеЕсли ЗначениеЗаполнено(СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериод]) Тогда 
		ПериодПоиска = СтрокаТаблицы[ОписаниеТаблицы.ИмяПоляПериод];
	КонецЕсли;	
	
	Возврат ПериодПоиска;
КонецФункции	

Процедура ЗаполнитьПоляСвязиСУчетомВремениВСтрокеТаблицы(СтрокаТаблицы, ОбщийГрафикСотрудника)
	Если Не ЗначениеЗаполнено(СтрокаТаблицы.ГрафикРаботы) Тогда
		СтрокаТаблицы.ГрафикРаботы = ОбщийГрафикСотрудника;
		СтрокаТаблицы.ПериодРегистрацииВремени = '00010101';
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(СтрокаТаблицы.ОбщийГрафик) Тогда
		СтрокаТаблицы.ОбщийГрафик = ОбщийГрафикСотрудника;
	КонецЕсли;	
	
	Если Не ЗначениеЗаполнено(СтрокаТаблицы.ГрафикРаботыНорма) Тогда
		СтрокаТаблицы.ГрафикРаботыНорма = СтрокаТаблицы.ГрафикРаботы;
		СтрокаТаблицы.ПериодРегистрацииНормыВремени = СтрокаТаблицы.ПериодРегистрацииВремени;
	КонецЕсли;

	Если ЗначениеЗаполнено(СтрокаТаблицы.ГрафикРаботы)
		И ЗначениеЗаполнено(СтрокаТаблицы.ГрафикРаботыНорма)
		И ТипЗнч(СтрокаТаблицы.ГрафикРаботы) = Тип("СправочникСсылка.ГрафикиРаботыСотрудников")
		И ТипЗнч(СтрокаТаблицы.ГрафикРаботыНорма) = Тип("СправочникСсылка.ГрафикиРаботыСотрудников")
		И СтрокаТаблицы.ГрафикРаботы <> СтрокаТаблицы.ГрафикРаботыНорма Тогда
		
		СтрокаТаблицы.ГрафикРаботыНорма = СтрокаТаблицы.ГрафикРаботы;
	КонецЕсли;	
	
	Если ТипЗнч(СтрокаТаблицы.ГрафикРаботыНорма) = Тип("СправочникСсылка.Сотрудники")
		И Не ЗначениеЗаполнено(СтрокаТаблицы.ПериодРегистрацииНормыВремени) Тогда
		
		СтрокаТаблицы.ПериодРегистрацииНормыВремени = СтрокаТаблицы.ПериодРегистрацииВремени;
	КонецЕсли;		
КонецПроцедуры	

Функция ДокументыКОбновлениюПолейСвязиСУчетомВремени()
	ДокументыПоМецам = Новый Массив;
	
	ТабличныеЧастиДокументов = ТабличныеЧастиДляОбновленияГрафиковРаботы();
	
	ЧастиЗапроса = Новый Массив;
	Для Каждого Документ Из ТабличныеЧастиДокументов Цикл
		Для Каждого ТабличнаяЧасть Из Документ.Значение Цикл
						
			ТекстЗапроса = 
			"ВЫБРАТЬ
			|	ТабличнаяЧасть.Ссылка,
			|	МАКСИМУМ(ТабличнаяЧасть.ПериодДействия) КАК Месяц
			|ИЗ
			|	&ТабличнаяЧасть КАК ТабличнаяЧасть
			|ГДЕ
			|	НЕ ТабличнаяЧасть.Ссылка.ПометкаУдаления
			|	И ТабличнаяЧасть.Сотрудник <> ЗНАЧЕНИЕ(Справочник.Сотрудники.ПустаяСсылка)
			|	И (ТабличнаяЧасть.ОбщийГрафик = ЗНАЧЕНИЕ(Справочник.ГрафикиРаботыСотрудников.ПустаяСсылка)
			|			ИЛИ ТабличнаяЧасть.ГрафикРаботы = НЕОПРЕДЕЛЕНО
			|			ИЛИ ТабличнаяЧасть.ГрафикРаботы = ЗНАЧЕНИЕ(Справочник.Сотрудники.ПустаяСсылка)
			|			ИЛИ ТабличнаяЧасть.ГрафикРаботы = ЗНАЧЕНИЕ(Справочник.ГрафикиРаботыСотрудников.ПустаяСсылка)
			|			ИЛИ ТабличнаяЧасть.ГрафикРаботыНорма = НЕОПРЕДЕЛЕНО
			|			ИЛИ ТабличнаяЧасть.ГрафикРаботыНорма = ЗНАЧЕНИЕ(Справочник.Сотрудники.ПустаяСсылка)
			|			ИЛИ ТабличнаяЧасть.ГрафикРаботыНорма = ЗНАЧЕНИЕ(Справочник.ГрафикиРаботыСотрудников.ПустаяСсылка)
			|			ИЛИ (ТабличнаяЧасть.ГрафикРаботы ССЫЛКА Справочник.ГрафикиРаботыСотрудников
			|				И ТабличнаяЧасть.ГрафикРаботыНорма ССЫЛКА Справочник.ГрафикиРаботыСотрудников
			|				И ТабличнаяЧасть.ГрафикРаботы <> ТабличнаяЧасть.ГрафикРаботыНорма)
			|			ИЛИ (ТабличнаяЧасть.ГрафикРаботыНорма = ЗНАЧЕНИЕ(Справочник.Сотрудники.ПустаяСсылка)
			|				И ТабличнаяЧасть.ПериодРегистрацииНормыВремени = ДАТАВРЕМЯ(1, 1, 1)))
			|
			|СГРУППИРОВАТЬ ПО
			|	ТабличнаяЧасть.Ссылка";
			
			ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ТабличнаяЧасть", Документ.Ключ.ПолноеИмя() + "." + ТабличнаяЧасть.Ключ.Имя); 
			ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ТабличнаяЧасть.ДатаНачала", "ТабличнаяЧасть." + ТабличнаяЧасть.Значение.ИмяПоляПериод);
			ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ТабличнаяЧасть.ПериодДействия", "ТабличнаяЧасть." + ТабличнаяЧасть.Значение.ИмяПоляПериодДействия);
			
			ЧастиЗапроса.Добавить(ТекстЗапроса);	
		КонецЦикла;
	КонецЦикла;		
	
	ТекстВложенногоЗапроса = "( " + СтрСоединить(ЧастиЗапроса, Символы.ПС + "ОБЪЕДИНИТЬ" + Символы.ПС) + ")";
		
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ВложенныеЗапрос.Ссылка,
	|	МАКСИМУМ(ВложенныеЗапрос.Месяц) КАК Месяц
	|ИЗ
	|	&ВложенныеЗапрос КАК ВложенныеЗапрос
	|
	|СГРУППИРОВАТЬ ПО
	|	ВложенныеЗапрос.Ссылка
	|
	|УПОРЯДОЧИТЬ ПО
	|	Месяц УБЫВ";
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&ВложенныеЗапрос", ТекстВложенногоЗапроса);

	Выборка = Запрос.Выполнить().Выбрать();
	
	Пока Выборка.СледующийПоЗначениюПоля("Месяц") Цикл
		ДокументыЗаМесяц = Новый Структура("Месяц, Документы", Выборка.Месяц, Новый Массив);
		ДокументыПоМецам.Добавить(ДокументыЗаМесяц);
		
		Пока Выборка.Следующий() Цикл
			ДокументыЗаМесяц.Документы.Добавить(Выборка.Ссылка);		
		КонецЦикла;	
	КонецЦикла;	
	
	Возврат ДокументыПоМецам;
КонецФункции	

Функция ОбщийГрафикДляЗаполненияПоУмолчанию()
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ГрафикиРаботыПоВидамВремени.ГрафикРаботы,
	|	КОЛИЧЕСТВО(РАЗЛИЧНЫЕ ГрафикиРаботыПоВидамВремени.Месяц) КАК КоличествоЗаполненныхМесяцев
