Функция ЗапросВыбораИсправляемыхДанныхПоРегистратору(МетаданныеРегистра, ИсправляемыеДокументыПоСотрудникам)
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("ИсправляемыеДокументыПоСотрудникам", ИсправляемыеДокументыПоСотрудникам);
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ИсправляемыеДокументыПоСотрудникам.Сотрудник,
	|	ИсправляемыеДокументыПоСотрудникам.ИсправленныйДокумент
	|ПОМЕСТИТЬ ВТИсправляемыеДокументыПоСотрудникам
	|ИЗ
	|	&ИсправляемыеДокументыПоСотрудникам КАК ИсправляемыеДокументыПоСотрудникам
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ДанныеРегистраУчетаВремени.*
	|ИЗ
	|	ВТИсправляемыеДокументыПоСотрудникам КАК ИсправляемыеДокументыПоСотрудникам
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВТДанныеРегистраУчетаВремени КАК ДанныеРегистраУчетаВремени
	|		ПО ИсправляемыеДокументыПоСотрудникам.Сотрудник = ДанныеРегистраУчетаВремени.Сотрудник
	|			И ИсправляемыеДокументыПоСотрудникам.ИсправленныйДокумент = ДанныеРегистраУчетаВремени.Регистратор";
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "ВТДанныеРегистраУчетаВремени", МетаданныеРегистра.ПолноеИмя());
	
	Возврат Запрос;
КонецФункции

Функция ИсправляемыеДокументыПоСотрудникам(ИсправленныйДокумент, ИмяПоляИсправленныйДокумент, Сотрудники)	
	Типы = Новый Массив;
	Типы.Добавить(ТипЗнч(ИсправленныйДокумент));
	
	ИсправляемыеДокументыПоСотрудникам = Новый ТаблицаЗначений;
	ИсправляемыеДокументыПоСотрудникам.Колонки.Добавить("Сотрудник", Новый ОписаниеТипов("СправочникСсылка.Сотрудники"));	
	ИсправляемыеДокументыПоСотрудникам.Колонки.Добавить("ИсправленныйДокумент", Новый ОписаниеТипов(Типы));
	
	ЦепочкаИсправленныхДокументов = ЦепочкаИсправленныхДокументов(ИсправленныйДокумент, ИмяПоляИсправленныйДокумент);	
	ЦепочкаИсправленныхДокументовПоСотрудникам = ЦепочкаИсправленныхДокументов.СкопироватьКолонки();	
	ЦепочкаИсправленныхДокументовПоСотрудникам.Колонки.Добавить("Сотрудник", Новый ОписаниеТипов("СправочникСсылка.Сотрудники"));
	
	Для Каждого ТекущийСотрудник Из Сотрудники Цикл
		Для Каждого ОписаниеИсправляемогоДокумента Из ЦепочкаИсправленныхДокументов Цикл
			СтрокаТаблицы = ЦепочкаИсправленныхДокументовПоСотрудникам.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаТаблицы, ОписаниеИсправляемогоДокумента);
			СтрокаТаблицы.Сотрудник = ТекущийСотрудник;
		КонецЦикла;			
	КонецЦикла;	
		
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("ЦепочкаИсправленныхДокументовПоСотрудникам", ЦепочкаИсправленныхДокументовПоСотрудникам);
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ЦепочкаИсправленныхДокументов.Порядок,
	|	ЦепочкаИсправленныхДокументов.Сотрудник КАК Сотрудник,
	|	ЦепочкаИсправленныхДокументов.ИсправленныйДокумент
	|ПОМЕСТИТЬ ЦепочкаИсправленныхДокументовПоСотрудникам
	|ИЗ
	|	&ЦепочкаИсправленныхДокументовПоСотрудникам КАК ЦепочкаИсправленныхДокументов
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ЦепочкаИсправленныхДокументовПоСотрудникам.Сотрудник КАК Сотрудник,
	|	ЦепочкаИсправленныхДокументовПоСотрудникам.ИсправленныйДокумент
	|ИЗ
	|	ЦепочкаИсправленныхДокументовПоСотрудникам КАК ЦепочкаИсправленныхДокументовПоСотрудникам
	|ГДЕ
	|	1 В
	|			(ВЫБРАТЬ ПЕРВЫЕ 1
	|				1 КАК Поле1
	|			ИЗ
	|				РегистрСведений.ПараметрыЗарегистрированныхДанныхУчетаВремениСотрудников КАК ПараметрыЗарегистрированныхДанныхУчетаВремениСотрудников
	|			ГДЕ
	|				ПараметрыЗарегистрированныхДанныхУчетаВремениСотрудников.ДокументОснование = ЦепочкаИсправленныхДокументовПоСотрудникам.ИсправленныйДокумент
	|				И ПараметрыЗарегистрированныхДанныхУчетаВремениСотрудников.Сотрудник = ЦепочкаИсправленныхДокументовПоСотрудникам.Сотрудник)
	|
	|УПОРЯДОЧИТЬ ПО
	|	Сотрудник,
	|	ЦепочкаИсправленныхДокументовПоСотрудникам.Порядок";
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	Пока Выборка.СледующийПоЗначениюПоля("Сотрудник") Цикл
		СтрокаТаблицы = ИсправляемыеДокументыПоСотрудникам.Добавить();
		ЗаполнитьЗначенияСвойств(СтрокаТаблицы, Выборка);
	КонецЦикла;	
	
	Возврат ИсправляемыеДокументыПоСотрудникам; 
КонецФункции	

Функция ЦепочкаИсправленныхДокументов(Знач ИсправленныйДокумент, ИмяПоляИсправленныйДокумент)
	Типы = Новый Массив;
	Типы.Добавить(ТипЗнч(ИсправленныйДокумент));
	
	ТаблицаИсправленныхДокументов = Новый ТаблицаЗначений;
	ТаблицаИсправленныхДокументов.Колонки.Добавить("ИсправленныйДокумент", Новый ОписаниеТипов(Типы));
	ТаблицаИсправленныхДокументов.Колонки.Добавить("Порядок", Новый ОписаниеТипов("Число"));
	
	Порядок = 1;
	Пока ИсправленныйДокумент <> Неопределено Цикл
		СтрокаТаблицы = ТаблицаИсправленныхДокументов.Добавить();
		СтрокаТаблицы.ИсправленныйДокумент = ИсправленныйДокумент;
		СтрокаТаблицы.Порядок = Порядок;
		
		ИсправленныйДокумент = СледующийИсправленныйДокумент(ИсправленныйДокумент, ИмяПоляИсправленныйДокумент);
		
		Порядок = Порядок + 1;
	КонецЦикла;	
	
	Возврат ТаблицаИсправленныхДокументов;
КонецФункции	

Функция СледующийИсправленныйДокумент(ДокументИсправения, ИмяПоляИсправленныйДокумент)
	ИсправленныйДокумент = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДокументИсправения, ИмяПоляИсправленныйДокумент);
	
	Если ЗначениеЗаполнено(ИсправленныйДокумент) Тогда
		Возврат ИсправленныйДокумент;
	Иначе
		Возврат Неопределено;
	КонецЕсли;		
КонецФункции	

Функция ПериодСтрокиРегистрируемыхДанных(СтрокаРегистриуемыхДанных)
