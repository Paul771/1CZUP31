	ПараметрыПолученияДанныхУчетаВремени.ДатаНачала = ПараметрыПолученияПлановогоВремени.ДатаНачала;
	ПараметрыПолученияДанныхУчетаВремени.ДатаОкончания = ПараметрыПолученияПлановогоВремени.ДатаОкончания;
	
