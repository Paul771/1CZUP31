		ИндексЗапросаОбразований = ИндексЗапросаОбразований + 1;
		
		ЧастиЗапроса.Добавить(
			"	{ЛЕВОЕ СОЕДИНЕНИЕ ВТПослевузовскоеОбразование КАК ПослевузовскоеОбразование
