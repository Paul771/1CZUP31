		|	ЕСТЬNULL(ПлановыйФОТИтоги.ФОТ, 0) КАК Оклад,
		|	ЕСТЬNULL(ПлановыйФОТИтоги.Надбавка, 0) КАК Надбавка,
		|	ЕСТЬNULL(ПлановыйФОТИтоги.ФОТ, 0) КАК ФОТ,
