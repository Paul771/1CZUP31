	Запрос.УстановитьПараметр("МассивПредметовНапоминаний", МассивПредметовНапоминаний);
	
	Если ВыполнятьВПривилегированномРежиме Тогда
	    УстановитьПривилегированныйРежим(Истина);
	КонецЕсли;
	
	РезультатЗапроса = Запрос.Выполнить();
	
