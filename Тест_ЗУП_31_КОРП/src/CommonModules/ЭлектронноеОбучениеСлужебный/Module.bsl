Функция ИзвлечьТекстИзДвоичныхДанных(Знач ДвоичныеДанные, Знач РасширениеФайла = "tmp") Экспорт
	
	Если ТипЗнч(ДвоичныеДанные) = Тип("Строка") Тогда
		ПутьКВременномуФайлу = ДвоичныеДанные; 
	Иначе
		ПутьКВременномуФайлу = ПолучитьИмяВременногоФайла(РасширениеФайла);
		ДвоичныеДанные.Записать(ПутьКВременномуФайлу);
	КонецЕсли;
	
	Извлечение = Новый ИзвлечениеТекста(ПутьКВременномуФайлу);
	
	ТекстФайла = "";
	
	Попытка
		
		ТекстФайла = Извлечение.ПолучитьТекст();
		
	Исключение
		
		ОписаниеОшибкиИнфо = ОписаниеОшибки();
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
								 НСтр("ru = 'Во время извлечения текста из файла ""%1"" при записи его в базу данных произошла неизвестная ошибка.'"), 
								 ПутьКВременномуФайлу);
		ТекстСообщения = ТекстСообщения + Строка(ОписаниеОшибкиИнфо);
		
		ЭлектронноеОбучениеСлужебный.ЗаписатьОшибкуВЖурналРегистрации(ТекстСообщения);

	КонецПопытки;
	
	Попытка
		УдалитьФайлы(ПутьКВременномуФайлу);
	Исключение
		ЭлектронноеОбучениеСлужебный.ЗаписатьОшибкуВЖурналРегистрации(
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(НСтр("ru = 'Не удалось удалить временный файл
			|%1 по причине: %2'"), ПутьКВременномуФайлу, КраткоеПредставлениеОшибки(ИнформацияОбОшибке()))
		);
	КонецПопытки;	
	
	Возврат ТекстФайла;
	
КонецФункции

