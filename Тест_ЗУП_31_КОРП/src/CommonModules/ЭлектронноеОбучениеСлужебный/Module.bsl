// Ищет ссылку на элемент справочника по значению реквизита.
//
Функция ЕдинственныйЭлементСправочникаПоЗначению(ИмяСправочника, ИмяРеквизита, ЗначениеРеквизита, Владелец = Неопределено, ЭтоГруппа = Неопределено) Экспорт

	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ ПЕРВЫЕ 1
		|	"+ИмяСправочника+".Ссылка
		|ИЗ
		|	Справочник."+ИмяСправочника+" КАК "+ИмяСправочника+"
		|ГДЕ
		|	"+ИмяСправочника+".ПометкаУдаления = ЛОЖЬ
		|	И "+ИмяСправочника+"."+ИмяРеквизита+" = &ЗначениеРеквизита";
		
	Если Владелец <> Неопределено Тогда
		
		Запрос.Текст = Запрос.Текст + "
		|	И "+ИмяСправочника+".Владелец = &Владелец";

		
		Запрос.УстановитьПараметр("Владелец", Владелец);
		
	КонецЕсли;
	
	Если ЭтоГруппа <> Неопределено Тогда
		
		Запрос.Текст = Запрос.Текст + "
		|	И "+ИмяСправочника+".ЭтоГруппа = &ЭтоГруппа";

		
		Запрос.УстановитьПараметр("ЭтоГруппа", ЭтоГруппа);
		
	КонецЕсли;
	
	Запрос.УстановитьПараметр("ЗначениеРеквизита", ЗначениеРеквизита);

	Результат = Запрос.Выполнить();

	Если Результат.Пустой() Тогда
		
		Возврат Справочники[ИмяСправочника].ПустаяСсылка();
		
	Иначе
		
		ВыборкаДетальныеЗаписи = Результат.Выбрать();

		ВыборкаДетальныеЗаписи.Следующий();
		
		Возврат ВыборкаДетальныеЗаписи.Ссылка;
		
	КонецЕсли;
	
КонецФункции

