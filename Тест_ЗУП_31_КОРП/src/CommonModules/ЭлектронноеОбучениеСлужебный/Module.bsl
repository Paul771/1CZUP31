		Иначе
			СтрокиДерева = Данные;
		КонецЕсли;
		
		Если СтрокиДерева.Количество() > 0 Тогда
			
			Для каждого СтрокаДерева Из СтрокиДерева Цикл
				
				СтрокаJSON = СтрокаJSON + "{";
				
				ВладелецСтроки = СтрокаДерева.Владелец();
				
