#Область Взаимодействия

// См. ВзаимодействияПереопределяемый.ПриЗаполненииНаборовЗначенийДоступа.
Процедура ПриЗаполненииНаборовЗначенийДоступаВзаимодействий(Объект, Таблица) Экспорт
	
	// Объект доступен если доступен "Ответственный" или "Учетная запись" или "Автор".
	// Логика "ИЛИ" реализуется через различные номера наборов.
	НомерНабора = 0;
	ТипФизическиеЛица = Тип("СправочникСсылка.ФизическиеЛица");
	МассивТабличныхЧастей = Новый Массив;
	
	// Чтобы код проходил проверку при отсутствии подсистемы "Взаимодействия" используется неявная связь по строковому имени.
	ИмяДокумента = Объект.Метаданные().Имя;
	
	Если ИмяДокумента = "Встреча"
		Или ИмяДокумента = "ЗапланированноеВзаимодействие" Тогда
		
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Автор);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Ответственный);
		
		МассивТабличныхЧастей.Добавить(Объект.Участники);
		
	ИначеЕсли ИмяДокумента = "СообщениеSMS" Тогда
		
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Автор);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Ответственный);
		
		МассивТабличныхЧастей.Добавить(Объект.Адресаты);
		
	ИначеЕсли ИмяДокумента = "ТелефонныйЗвонок" Тогда
		
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Автор);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Ответственный);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.АбонентКонтакт, ТипФизическиеЛица);
		
	ИначеЕсли ИмяДокумента = "ЭлектронноеПисьмоВходящее" Тогда
		
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.УчетнаяЗапись);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Ответственный);
		
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиПисьма);
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиКопий);
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиОтвета);
		
	ИначеЕсли ИмяДокумента = "ЭлектронноеПисьмоИсходящее" Тогда
		
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.УчетнаяЗапись);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Автор);
		ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, Объект.Ответственный);
		
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиПисьма);
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиКопий);
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиОтвета);
		МассивТабличныхЧастей.Добавить(Объект.ПолучателиСкрытыхКопий);
		
	Иначе
		
		Возврат;
		
	КонецЕсли;
	
	Для Каждого ТабличнаяЧасть Из МассивТабличныхЧастей Цикл
		Для Каждого СтрокаТаблицы Из ТабличнаяЧасть Цикл
			ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, СтрокаТаблицы.Контакт, ТипФизическиеЛица);
		КонецЦикла;
	КонецЦикла;
	
КонецПроцедуры

Процедура ДобавитьЗначениеЗначениеДоступа(Таблица, НомерНабора, ЗначениеДоступа, ПроверяемыйТип = Неопределено)
	Если ПроверяемыйТип <> Неопределено Тогда
		Если Не ЗначениеЗаполнено(ЗначениеДоступа)
			Или ТипЗнч(ЗначениеДоступа) <> ПроверяемыйТип Тогда
			Возврат;
		КонецЕсли;
	КонецЕсли;
	
	НомерНабора = НомерНабора + 1;
	СтрокаТаб = Таблица.Добавить();
	СтрокаТаб.НомерНабора     = НомерНабора;
	СтрокаТаб.ЗначениеДоступа = ЗначениеДоступа;
КонецПроцедуры

