	ИначеЕсли СтрНайти(Результат.ТабличныеЧасти.ОписаниеТабличныхЧастей[ИмяТабличнойЧасти], "ИдентификаторСтроки") Тогда
		ИмяРеквизита = "ИдентификаторСтроки";
