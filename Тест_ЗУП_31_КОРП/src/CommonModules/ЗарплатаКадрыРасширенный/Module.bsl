		Если ЗначениеЗаполнено(Выборка.Показатель) Тогда
			
			ОписаниеПоказателя = Новый Структура("Показатель,Значение");
			
			ЗаполнитьЗначенияСвойств(ОписаниеПоказателя, Выборка);
			Показатели.Добавить(ОписаниеПоказателя);
			
		КонецЕсли; 
		
	КонецЦикла;
	
	Возврат Показатели;
	
