	ОписаниеКоманды.Вставить("Представление",	Представление);
	ОписаниеКоманды.Вставить("Порядок",			Порядок);
	ОписаниеКоманды.Вставить("ИмяФормы",		ИмяФормы);
	
	Возврат ОписаниеКоманды;
	
