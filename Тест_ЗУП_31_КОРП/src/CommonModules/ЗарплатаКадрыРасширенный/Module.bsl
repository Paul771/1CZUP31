	Запрос.УстановитьПараметр("СтруктурнаяЕдиница", СтруктурнаяЕдиница);
	
	Запрос.Текст =
		"ВЫБРАТЬ
		|	&ДатаСведений КАК Период,
		|	&СтруктурнаяЕдиница КАК СтруктурнаяЕдиница
		|ПОМЕСТИТЬ ВТИзмеренияДаты";
		
