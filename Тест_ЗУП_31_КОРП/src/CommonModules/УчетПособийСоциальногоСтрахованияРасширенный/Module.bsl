Процедура ДополнитьДанныеУчетаНачисленийСреднегоЗаработкаФСС() Экспорт
	
	// ДанныеОНачисленияхДляРасчетаСреднегоЗаработкаФСС
	ТекстЗапроса =
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ДанныеОНачислениях.Регистратор
	|ПОМЕСТИТЬ ВТРегистраторы
	|ИЗ
	|	РегистрНакопления.ДанныеОНачисленияхДляРасчетаСреднегоЗаработкаФСС КАК ДанныеОНачислениях
	|ГДЕ
	|	(ДанныеОНачислениях.ФизическоеЛицо = ЗНАЧЕНИЕ(Справочник.ФизическиеЛица.ПустаяСсылка)
	|			ИЛИ ДанныеОНачислениях.ГоловнаяОрганизация = ЗНАЧЕНИЕ(Справочник.Организации.ПустаяСсылка))
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ДанныеОНачислениях.Регистратор
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ДанныеОНачислениях.Период,
	|	ДанныеОНачислениях.Регистратор КАК Регистратор,
	|	ДанныеОНачислениях.НомерСтроки,
	|	ДанныеОНачислениях.Активность,
	|	Сотрудники.ФизическоеЛицо,
	|	Сотрудники.ГоловнаяОрганизация,
	|	ДанныеОНачислениях.Сотрудник,
	|	ДанныеОНачислениях.ПорядокРасчета,
	|	ДанныеОНачислениях.Сумма
	|ИЗ
	|	РегистрНакопления.ДанныеОНачисленияхДляРасчетаСреднегоЗаработкаФСС КАК ДанныеОНачислениях
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Сотрудники КАК Сотрудники
	|		ПО (Сотрудники.Ссылка = ДанныеОНачислениях.Сотрудник)
	|			И (ДанныеОНачислениях.Регистратор В
	|				(ВЫБРАТЬ
	|					ВТРегистраторы.Регистратор
	|				ИЗ
	|					ВТРегистраторы))
	|
	|УПОРЯДОЧИТЬ ПО
	|	Регистратор";
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Выборка = Запрос.Выполнить().Выбрать();
	
	Пока Выборка.СледующийПоЗначениюПоля("Регистратор") Цикл
		НаборЗаписей = РегистрыНакопления.ДанныеОНачисленияхДляРасчетаСреднегоЗаработкаФСС.СоздатьНаборЗаписей();
		НаборЗаписей.Отбор.Регистратор.Установить(Выборка.Регистратор);
		Пока Выборка.Следующий() Цикл
		    ЗаполнитьЗначенияСвойств(НаборЗаписей.Добавить(), Выборка);
		КонецЦикла;
		НаборЗаписей.Записать();
	КонецЦикла;
	
	// СведенияОНачисленияхДляРасчетаСреднегоЗаработкаФСС
	ТекстЗапроса =
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	СведенияОНачислениях.Сотрудник
	|ПОМЕСТИТЬ ВТИзмерения
	|ИЗ
	|	РегистрСведений.СведенияОНачисленияхДляРасчетаСреднегоЗаработкаФСС КАК СведенияОНачислениях
	|ГДЕ
	|	(СведенияОНачислениях.ФизическоеЛицо = ЗНАЧЕНИЕ(Справочник.ФизическиеЛица.ПустаяСсылка)
	|			ИЛИ СведенияОНачислениях.ГоловнаяОрганизация = ЗНАЧЕНИЕ(Справочник.Организации.ПустаяСсылка))
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	Сотрудники.ФизическоеЛицо,
	|	Сотрудники.ГоловнаяОрганизация,
	|	СведенияОНачислениях.Сотрудник КАК Сотрудник,
	|	СведенияОНачислениях.Месяц КАК Месяц,
	|	СведенияОНачислениях.ПорядокРасчета КАК ПорядокРасчета,
	|	СведенияОНачислениях.Сумма,
	|	СведенияОНачислениях.ДанныеИзУчетаСреднегоОбщий
	|ИЗ
	|	РегистрСведений.СведенияОНачисленияхДляРасчетаСреднегоЗаработкаФСС КАК СведенияОНачислениях
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Сотрудники КАК Сотрудники
	|		ПО (Сотрудники.Ссылка = СведенияОНачислениях.Сотрудник)
	|			И (СведенияОНачислениях.Сотрудник В
	|				(ВЫБРАТЬ
	|					ВТИзмерения.Сотрудник
	|				ИЗ
	|					ВТИзмерения))
	|
	|УПОРЯДОЧИТЬ ПО
	|	Сотрудник";
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Выборка = Запрос.Выполнить().Выбрать();
	
	Пока Выборка.СледующийПоЗначениюПоля("Сотрудник") Цикл
		НаборЗаписей = РегистрыСведений.СведенияОНачисленияхДляРасчетаСреднегоЗаработкаФСС.СоздатьНаборЗаписей();
		НаборЗаписей.Отбор.Сотрудник.Установить(Выборка.Сотрудник);
		Пока Выборка.Следующий() Цикл
			ЗаполнитьЗначенияСвойств(НаборЗаписей.Добавить(), Выборка);
		КонецЦикла;
		НаборЗаписей.Записать();
	КонецЦикла;
	
КонецПроцедуры

Процедура ДополнитьТабличныеЧастиУчетаНачисленийСреднегоЗаработкаФСС() Экспорт
	
	ТекстЗапроса =
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ДокументыДляОбработки.Ссылка,
	|	ДокументыДляОбработки.ФизическоеЛицо
	|ИЗ
	|	(ВЫБРАТЬ
	|		БольничныйЛистСреднийЗаработокФСС.Ссылка КАК Ссылка,
	|		Сотрудники.ФизическоеЛицо КАК ФизическоеЛицо
	|	ИЗ
	|		Документ.БольничныйЛист.СреднийЗаработокФСС КАК БольничныйЛистСреднийЗаработокФСС
	|			ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.БольничныйЛист КАК БольничныйЛист
	|			ПО (БольничныйЛист.Ссылка = БольничныйЛистСреднийЗаработокФСС.Ссылка)
	|				И (БольничныйЛист.Сотрудник <> ЗНАЧЕНИЕ(Справочник.Сотрудники.ПустаяСсылка))
	|				И (БольничныйЛистСреднийЗаработокФСС.ФизическоеЛицо = ЗНАЧЕНИЕ(Справочник.ФизическиеЛица.ПустаяСсылка))
	|			ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Сотрудники КАК Сотрудники
	|			ПО (Сотрудники.Ссылка = БольничныйЛист.Сотрудник)
	|
	|	ОБЪЕДИНИТЬ ВСЕ
	|
	|	ВЫБРАТЬ
	|		ОтпускПоУходуЗаРебенкомСреднийЗаработокФСС.Ссылка,
	|		ОтпускПоУходуЗаРебенкомСреднийЗаработокФСС.ФизическоеЛицо
	|	ИЗ
	|		Документ.ОтпускПоУходуЗаРебенком.СреднийЗаработокФСС КАК ОтпускПоУходуЗаРебенкомСреднийЗаработокФСС
	|			ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.ОтпускПоУходуЗаРебенком КАК ОтпускПоУходуЗаРебенком
