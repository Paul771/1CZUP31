	|			И (БольничныйЛист.ДатаНачалаСобытия = БольничныйЛист.ДатаНачалаОплаты)
	|			И (ПособияПоСоциальномуСтрахованию.СтраховыеСлучаи = 0)";
	Запрос.УстановитьПараметр("ДатаНачала", Параметры.ДатаНачала);
	
	ЕстьПропущенныеЗаблокированные = Ложь;
	
