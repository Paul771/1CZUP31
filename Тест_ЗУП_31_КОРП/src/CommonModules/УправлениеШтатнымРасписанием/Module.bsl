		СоответствиеСсылокОбъектам.Вставить(ПозицияОбъект.Ссылка, ПозицияОбъект);
		
		СтрокаПозиции = КоллекцияПозиций.Добавить();
		ЗаполнитьЗначенияСвойств(СтрокаПозиции, ПозицияОбъект);
