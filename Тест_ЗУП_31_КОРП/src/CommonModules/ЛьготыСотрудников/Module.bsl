				КонецЕсли; 
				
			КонецЦикла;
			
			СтруктураНачисления.Вставить("Показатели", Показатели);
			Льготы.Добавить(СтруктураНачисления);
			
		КонецЦикла;
		
		ДанныеСотрудников.Вставить(Выборка.Сотрудник, Новый Структура("Льготы", Льготы));
		
	КонецЦикла;
	
	Возврат ДанныеСотрудников;
	
