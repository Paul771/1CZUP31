	ИнтеграцияС1СДокументооборот.ПроверитьВозвратВебСервиса(Прокси, Результат);
	
	ЗаполнитьРеквизитФормыИзXDTO("ДатаРегистрации", Результат.document, "regDate");
	ЗаполнитьРеквизитФормыИзXDTO("РегистрационныйНомер", Результат.document, "regNumber");
	ЗаполнитьРеквизитФормыИзXDTO("Состояние", Результат.document, "status");
